@model NermeenVidly.ViewModels.CustomerFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New</h2>


@using (Html.BeginForm("Save", "Customers"))
{
    // @Html.ValidationSummary(true,"Please fix the following errors: ")
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Birthdate)
        @Html.TextBoxFor(m => m.Birthdate, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MembershipTyes)
        @Html.DropDownListFor(m => m.MembershipTypeId, new SelectList(Model.MembershipTyes, "Id", "Name"), "Select Membership Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MembershipTypeId)
    </div>
    <div class="checkbox">

        @Html.CheckBoxFor(m => m.IsSubscribedToNewsletter) IsSubscribedToNewsletter
    </div>

    @Html.HiddenFor(m => m.Id);
    @Html.AntiForgeryToken();
    <button type="submit" class="btn btn-primary">Save</button>

}

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval");
}  