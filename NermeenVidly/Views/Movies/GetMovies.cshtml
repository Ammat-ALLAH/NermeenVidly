@model  NermeenVidly.ViewModels.MoviesViewModel
@{
    ViewBag.Title = "GetMovies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.MoviesList.Count == 0)
{
    <text> No Movies </text>
}

else
{
<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Movie Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mv in Model.MoviesList)
        {

        <tr> <td>@mv.Name</td> </tr>
        }
    </tbody>
</table>

}
